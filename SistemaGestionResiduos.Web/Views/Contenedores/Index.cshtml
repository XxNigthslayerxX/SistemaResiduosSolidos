@model IEnumerable<SistemaGestionResiduos.Domain.Entities.Contenedor>

@{
    ViewData["Title"] = "Contenedores";
}

<h1>Contenedores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ubicacion)</th>
            <th>@Html.DisplayNameFor(model => model.Capacidad)</th>
            <th>@Html.DisplayNameFor(model => model.NivelLlenado)</th>
            <th>@Html.DisplayNameFor(model => model.TipoResiduo)</th>
            <th>@Html.DisplayNameFor(model => model.UltimaRecoleccion)</th>
            <th>@Html.DisplayNameFor(model => model.Ruta)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Ubicacion)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacidad)</td>
                <td>@Html.DisplayFor(modelItem => item.NivelLlenado)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoResiduo)</td>
                <td>@Html.DisplayFor(modelItem => item.UltimaRecoleccion)</td>
                <td>@Html.DisplayFor(modelItem => item.Ruta.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
