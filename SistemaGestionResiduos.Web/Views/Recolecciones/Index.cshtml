@model IEnumerable<SistemaGestionResiduos.Domain.Entities.Recoleccion>

@{
    ViewData["Title"] = "Recolecciones";
}

<h1>Recolecciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nueva Recolecci√≥n</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th>@Html.DisplayNameFor(model => model.PesoRecolectado)</th>
            <th>@Html.DisplayNameFor(model => model.TipoResiduo)</th>
            <th>@Html.DisplayNameFor(model => model.Observaciones)</th>
            <th>@Html.DisplayNameFor(model => model.Contenedor)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>@Html.DisplayFor(modelItem => item.PesoRecolectado)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoResiduo)</td>
                <td>@Html.DisplayFor(modelItem => item.Observaciones)</td>
                <td>@Html.DisplayFor(modelItem => item.Contenedor.Ubicacion)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
